<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plurry.plurry" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Control"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Splash"
            android:label="Plurry" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".GroupList"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name=".ScheduleList"
            android:label="@string/title_activity_schedule"
            android:screenOrientation="portrait" >


        </activity>
        <activity
            android:name=".AddProducts"
            android:label="@string/title_activity_add_products" >
        </activity>
        <activity
            android:name=".CreateGroup"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name=".CreateSchedule"
            android:label="@string/title_activity_create_schedule"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
    </application>

</manifest>
